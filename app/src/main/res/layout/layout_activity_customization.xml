<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFC107"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="2dp"
    android:paddingEnd="10dp"
    android:paddingBottom="2dp">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:stretchColumns="1">

        <TableRow
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:text="@string/package_name"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_package_name"
                android:layout_span="2"
                android:hint="@string/show_package_name"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:text="@string/activity_name"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_activity_name"
                android:layout_span="2"
                android:hint="@string/show_activity_name"
                android:maxWidth="300dp"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/widget"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_widget_info"
                android:layout_span="2"
                android:hint="@string/show_widget_info"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </TableRow>

        <!--<TableRow
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:text="@string/position_info"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_position_info"
                android:layout_span="2"
                android:hint="@string/show_position_info"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </TableRow>-->
    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_show_outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="@string/show_outline"
            android:textSize="12sp" />

        <!--<Button
            android:id="@+id/button_reget_outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="@string/re_get"
            android:textSize="12sp" />-->

        <Button
            android:id="@+id/button_add_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:enabled="false"
            android:padding="0dp"
            android:text="@string/add_widget"
            android:textSize="12sp" />

        <!--<Button
            android:id="@+id/button_show_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="@string/show_target"
            android:textColor="#ffffff"
            android:textSize="12sp" />-->

        <!--<Button
            android:id="@+id/button_add_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:enabled="false"
            android:padding="0dp"
            android:text="添加坐标"
            android:textColor="#ffffff"
            android:textSize="12sp" />-->

        <Button
            android:id="@+id/button_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="@string/exit"
            android:textSize="12sp" />


    </LinearLayout>
</LinearLayout>
