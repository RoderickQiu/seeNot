<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_600"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/press_here_move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingBottom="1dp"
                android:text="@string/press_here_move"
                android:textColor="@color/gray_700"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap" />

            <ImageButton
                android:id="@+id/button_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#00000000"
                android:contentDescription="@string/exit"
                android:padding="1dp"
                android:src="@drawable/close_18dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
            android:background="@color/gray_700" />

        <LinearLayout
            android:id="@+id/mixed_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/mixed_rule_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="6dp"
                android:paddingVertical="8dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rule_for_msg"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rule_for_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ï¼š"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/subrule_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="52dp"
                android:scrollbarAlwaysDrawVerticalTrack="true" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/mixed_subrule_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="4dp"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:scrollbars="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subrule_set_title"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp"
                    android:background="@color/gray_700" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subrule_condition" />

                    <TextView
                        android:id="@+id/subrule_set_condition_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="6dp"
                    android:text="@string/condition_tip" />

                <RelativeLayout

                    android:id="@+id/condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/condition_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="66dp"
                            android:entries="@array/condition_spinner" />

                        <TextView
                            android:id="@+id/condition_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dp"
                            android:layout_marginEnd="80dp"
                            android:layout_marginBottom="4dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="---"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/condition_set"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/edit_18dp"
                        android:drawablePadding="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="@string/settings"
                        android:textColor="@color/gray_800"
                        android:textSize="12sp"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/skip_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarAlwaysDrawVerticalTrack="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_copy_skip"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="6dp"
                        android:drawableLeft="@drawable/content_copy_18dp"
                        android:drawablePadding="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="@string/copy_skip"
                        android:textColor="@color/gray_800"
                        android:textSize="12sp"
                        tools:ignore="RtlHardcoded" />

                    <Button
                        android:id="@+id/button_add_skip"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:drawableLeft="@drawable/add_18dp"
                        android:drawablePadding="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="@string/add_skip"
                        android:textColor="@color/gray_800"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp"
                    android:background="@color/gray_700" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subrule_mask" />

                        <TextView
                            android:id="@+id/subrule_set_mask_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/subrule_set_mask_msg"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/multi_masks_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">

                        <ImageButton
                            android:id="@+id/previous_mask_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"

                            android:backgroundTint="#00000000"
                            android:contentDescription="@string/previous"
                            android:padding="0dp"
                            android:src="@drawable/arrow_left_24dp"
                            app:tint="@color/gray_700" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            tools:ignore="RelativeOverlap">

                            <TextView
                                android:id="@+id/current_mask_widget_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="3dp"
                                android:text="@string/slash"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/all_mask_widget_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/next_mask_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"

                            android:backgroundTint="#00000000"

                            android:contentDescription="@string/next"
                            android:padding="0dp"
                            android:src="@drawable/arrow_right_24dp"
                            app:tint="@color/gray_700" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/condition_mask_show_outline"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/grid_on_18dp"

                            android:drawablePadding="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:text="@string/show_outline"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            tools:ignore="RtlHardcoded" />

                        <Button
                            android:id="@+id/condition_mask_confirm"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/done_18dp"
                            android:drawablePadding="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:text="@string/add_widget"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            android:visibility="gone"
                            tools:ignore="RtlHardcoded" />

                        <Button
                            android:id="@+id/condition_mask_delete_this"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/remove_18dp"
                            android:drawablePadding="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:text="@string/delete_current"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            android:visibility="gone"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/mixed_condition_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="4dp"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:scrollbars="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/condition_assign_title"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp"
                    android:background="@color/gray_700" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/condition_refresh"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/refresh_24dp"
                        android:drawablePadding="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="@string/refresh"
                        android:textColor="@color/gray_800"
                        tools:ignore="RtlHardcoded" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="78dp"
                        android:orientation="vertical"
                        tools:ignore="RelativeOverlap">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/in_app" />

                            <TextView
                                android:id="@+id/condition_in_app"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray_600" />

                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp">

                            <TextView
                                style="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/in_activity" />

                            <TextView
                                android:id="@+id/condition_in_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray_600" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/try_recatch" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp"
                    android:background="@color/gray_700" />

                <LinearLayout
                    android:id="@+id/condition_skip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subrule_text_title" />

                        <TextView
                            android:id="@+id/subrule_skip_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/condition_text_show_outline"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/grid_on_18dp"

                            android:drawablePadding="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:text="@string/show_outline"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            tools:ignore="RtlHardcoded" />

                        <Button
                            android:id="@+id/condition_text_confirm"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/done_18dp"
                            android:drawablePadding="4dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:text="@string/select_skip"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            android:visibility="gone"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/mixed_info_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="52dp"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:elevation="1dp"
                    android:text="@string/rule_title" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/rule_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:inputType="textNoSuggestions"
                    app:boxBackgroundColor="@color/orange_600"
                    app:boxStrokeColor="@color/gray_700">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="1dp"
                    android:text="@string/rule_version" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/rule_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:inputType="textNoSuggestions"
                    app:boxBackgroundColor="@color/orange_600"
                    app:boxStrokeColor="@color/gray_700">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/default_rule_version_number" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="1dp"
                    android:text="@string/rule_for_version" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/rule_for_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:inputType="textNoSuggestions"
                    app:boxBackgroundColor="@color/orange_600"
                    app:boxStrokeColor="@color/gray_700">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/default_rule_version_number" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:ignore="RelativeOverlap">

        <ImageButton
            android:id="@+id/mixed_back"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/expand_more"
            android:src="@drawable/baseline_arrow_back_ios_24dp"
            app:tint="@color/gray_700" />

        <Button
            android:id="@+id/set_mask_info"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="6dp"
            android:drawableLeft="@drawable/settings_18dp"
            android:drawablePadding="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/set_mask_info"
            android:textColor="@color/gray_800"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/button_save_condition"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/done_18dp"
            android:drawablePadding="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/save"
            android:textColor="@color/gray_800"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/new_mask_subrule"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:drawableLeft="@drawable/add_18dp"
            android:drawablePadding="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/new_subrule"
            android:textColor="@color/gray_800"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

</RelativeLayout>