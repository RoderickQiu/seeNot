<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="general_settings"
        app:title="@string/settings_general">

        <SwitchPreferenceCompat
            app:key="master-switch"
            app:summary="@string/settings_master_switch_summary"
            app:title="@string/settings_master_switch"
            app:defaultValue="true"/>

        <SwitchPreferenceCompat
            app:key="split"
            app:summary="@string/settings_split_screen_summary"
            app:title="@string/settings_split_screen"
            app:defaultValue="true"/>

    </PreferenceCategory>

</PreferenceScreen>
